<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center_horizontal"
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:layout_marginTop="@dimen/sp10"
            android:layout_marginBottom="@dimen/sp10"
            android:textColor="@color/text_color"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp24"
            android:layout_height="wrap_content"
            android:text="@string/info_text"
            android:id="@+id/infoText"/>

    <TextView
            android:textColor="@color/text_color"
            android:id="@+id/count"
            android:layout_gravity="center"
            android:textSize="@dimen/sp140"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1453"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

    <TextView
            android:layout_marginTop="@dimen/sp30"
            android:layout_marginBottom="@dimen/sp10"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shareText"
            android:layout_gravity="center"
            android:text="@string/share_text"
            android:textSize="@dimen/sp24"/>

    <ImageView
            android:paddingTop="@dimen/sp10"
            android:paddingBottom="@dimen/sp30"
            android:id="@+id/shareImage"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_share"/>

    <LinearLayout
            android:layout_marginTop="@dimen/sp10"
            android:layout_marginEnd="@dimen/sp30"
            android:layout_marginStart="@dimen/sp30"
            android:layout_marginBottom="@dimen/sp10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

        <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <Button
                    android:background="@color/colorPrimary"
                    android:text="@string/save_button"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveButton"/>
        </LinearLayout>

        <View android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>

        <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:gravity="end">
            <Button
                    android:id="@+id/resetButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="@string/reset_button"
                    android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
